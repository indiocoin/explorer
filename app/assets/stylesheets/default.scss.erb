body {
  margin: 0;
  font-family: 'Kanit', sans-serif;
  color: <%= ENV['TEXT_COLOR'] %>;
  background: <%= ENV['BACKGROUND_COLOR_BOTTOM'] %>;
  background-image: url("data:image/svg+xml;base64,");
}

header {
  background-color: <%= ENV['BACKGROUND_COLOR_TOP'] %>;
  background-image: url("data:image/svg+xml;base64,");
  height: 55vh;
  padding: 5px 0;
  box-shadow: 0 4px 9px 0 rgba(23,28,33,.16);
  clip-path: polygon(0% 0%, 0% 100%, 100% 75%, 100% 0%);

  nav {
    max-width: 1100px;
    margin: 20px auto 0;
    align-items: center;
    display: flex;

    h1 {
      margin: 0;
      span {font-weight: normal}
    }

    a {
      text-decoration: none;
      padding-left: 10px;
      color: <%= ENV['TEXT_COLOR'] %>;
    }

    form {
      flex-grow: 5;
      vertical-align: middle;

      input {float: right}
      button {display: none}
    }
  }
}

article {
  max-width: 1100px;
  padding: 50px;
  margin: calc(-55vh + 200px) auto 40px;
  word-wrap: break-word;
  box-shadow: 0 4px 9px 0 rgba(23,28,33,.06);
  background: #FFF;
  border-radius: 5px;
  position: relative;
  z-index: 2;

  h1 {margin: 0 0 40px}
  h2 {padding: 0; line-height: 0; margin: 0 0 1em}
  .flex-container {
    display: flex;
    margin-bottom: 20px;
  }
  .half {
    flex-grow: 1;
    max-width: 50%;
    pre {padding-left: 20px}

  & + .half {padding-left: 20px}
  }
  .full {width: 100%}
  & > table {margin-bottom: 50px}
  & > table:last-child {margin-bottom: 0}

  .coinmarketcap-currency-widget {
    & > div {border: none !important}
  }

  .about-half {
    font-size: 1.2 em;
	margin-bottom: 20px;
  }

  table {
    border-collapse: collapse;
    line-height: 1.5em;
    width: 100%;
  
    td {padding-left: 5px; word-break: break-all}
    tr td:first-child {font-weight: bold}
    tr:nth-child(even) {background-color: #f9f9f9}
    th {text-align: left}
  }
}

footer {
  max-width: 1100px;
  margin: 0 auto;
  text-align: right;
  padding-bottom: 150px;

  a {
    color: <%= ENV['TEXT_LINK_COLOR'] %>;
    padding: 0 10px
  }
}

a {
  color: <%= ENV['TEXT_LINK_COLOR'] %>;
  text-decoration: underline;
  cursor: pointer;
}

.cf {text-align: center}

select, input {
  font-family: 'Kanit', sans-serif;
  border-radius: 5px;
  padding: 7px;
  margin: 3px;
  min-width: 300px;
  font-size: 20px;
  border: none;
}
